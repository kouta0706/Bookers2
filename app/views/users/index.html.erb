<div class="container">
      <div class="row">
      	<div class="col-lg-4"> 
             <%= render 'post_images/list', post_images: @post_images %>
         </div>
         <div class="col-lg-8">
         <h1>Users</h1>
<table class="table table-striped">
	<tr>
		<th>image</th>
		<th>name</th>
		<th colspan="3"></th>
	</tr>
	<% @users.each do |user| %>
 <tr>
   <td><%= attachment_image_tag @user, :image, :fill, 60, 60, class: "img-circle pull-left profile-thumb" %></td>
   <td><%= user.name %></td>
   <td><%= link_to "show",user_path(user),class: "user_#{user.id}"%></td>
 </tr>
<% end %>
</table>
</div>
</div>
</div>