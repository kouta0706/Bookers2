
<div class="container">
      <div class="row">
      	<% if @book.errors.any? %>
        <%= @book.errors.count %>error
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>
      	<div class="col-lg-4"> 
             <%= render 'post_images/list', post_images: @post_images %>
         </div>
         <div class="col-lg-8">
      	<h1>Books</h1>
<table class="table table-striped">
	<tr>
		<th>Title</th>
		<th>Opinion</th>
		<th colspan="3"></th>
	</tr>
	<% @books.each do |book| %>
 <tr>
 	<td><%= attachment_image_tag @user, :image, fallback: "no_man.png", size:'80x80' %></td>
   <td><%= link_to  book.title, book_path(book.id),class: "book_#{book.id}"%></td>
   <td><%= book.opinion %></td>
 </tr>
<% end %>
</table>
</div>
</div>
</div>
